<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン情報を入力してください</div>
    <div class="form users-form">
      <div class="form-body">
        <%=form_tag("/login") do%>
          <p>Email Address</p>
          <input name="email">
          <p>Password</p>
          <input name="password" type="password">
          <input type="submit" value="Login">
        <% end %>
      </div>
    </div>
  </div>
</div>